<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.simpletabindicator.SimpleTabIndicator
        android:id="@+id/tab_indicator1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffcccc"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        app:sti_checkedTitleColor="#ff0000"
        app:sti_enableFollowPageScroll="true"
        app:sti_stretch_mode="stretch_width"
        app:sti_tabColor="#ff0000"
        app:sti_tabHeight="4dp"
        app:sti_tabTopPadding="15dp"
        app:sti_titleSize="15dp"
        app:sti_unCheckedTitleColor="#222222" />

    <com.example.simpletabindicator.SimpleTabIndicator
        android:id="@+id/tab_indicator2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffcccc"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        app:sti_checkedTitleColor="#ff0000"
        app:sti_enableFollowPageScroll="true"
        app:sti_stretch_mode="stretch_space"
        app:sti_tabColor="#ff0000"
        app:sti_tabHeight="4dp"
        app:sti_tabTopPadding="15dp"
        app:sti_titlePadding="4dp"
        app:sti_titleSize="15dp"
        app:sti_unCheckedTitleColor="#222222" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
