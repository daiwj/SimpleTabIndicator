<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.simpletabindicator.SimpleTabIndicator
        android:id="@+id/tab_indicator1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffcccc"
        android:paddingTop="10dp"
        app:sti_checkedTitleColor="#ff0000"
        app:sti_enableFollowPageScroll="true"
        app:sti_enableLineAnimation="true"
        app:sti_lineColor="#ff0000"
        app:sti_lineHeight="4dp"
        app:sti_lineTopPadding="15dp"
        app:sti_lineWidthMode="wrap_content"
        app:sti_stretchMode="stretch_width"
        app:sti_titleSize="15dp"
        app:sti_unCheckedTitleColor="#222222" />

    <com.example.simpletabindicator.SimpleTabIndicator
        android:id="@+id/tab_indicator2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffcccc"
        android:paddingTop="10dp"
        app:sti_checkedTitleColor="#ff0000"
        app:sti_enableFollowPageScroll="true"
        app:sti_enableLineAnimation="true"
        app:sti_lineColor="#ff0000"
        app:sti_lineHeight="4dp"
        app:sti_lineTopPadding="15dp"
        app:sti_lineWidthMode="match_parent"
        app:sti_stretchMode="stretch_space"
        app:sti_titleSize="15dp"
        app:sti_unCheckedTitleColor="#222222" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
